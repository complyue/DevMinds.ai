{
  "name": "devminds.ai",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "DMINDS_PORT=${DMINDS_PORT:-5555} DEV_SINGLE=1 tsx watch src/server.ts",
    "build:clean": "rm -rf dist",
    "build:web": "pnpm --dir webapp run build",
    "build:server": "tsc -p tsconfig.json && cp -R src/config dist/config || true",
    "build": "pnpm run build:web && pnpm run build:server",
    "rebuild": "pnpm run build:clean && pnpm run build",
    "start": "DMINDS_PORT=${DMINDS_PORT:-5555} node dist/server.js",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit && (cd webapp && tsc -p tsconfig.json --noEmit)",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "pnpm run format:manifests || true && pnpm run format:rootdocs || true",
    "format:manifests": "sort-package-json package.json && sort-package-json webapp/package.json",
    "format:rootdocs": "scripts/format-root-docs.sh",
    "playwright": "playwright",
    "update-models": "node scripts/update-models.js"
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.md": "prettier --write --ignore-unknown",
    "*.mdx": "prettier --write --ignore-unknown",
    "docs/**/*.{md,mdx}": "prettier --write --ignore-unknown",
    "design/**/*.{md,mdx}": "prettier --write --ignore-unknown",
    "{src,webapp/src}/**/*.json": [
      "sort-json --deep --ignore-case --order asc",
      "prettier --write --ignore-unknown"
    ],
    "{src,webapp/src}/**/*.{ts,tsx,js,jsx,yaml,yml,css,scss,md,mdx,html,htm}": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.6.2",
    "@types/js-yaml": "^4.0.9",
    "@types/ws": "^8.18.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "3.6.2",
    "sort-json": "^2.0.1",
    "sort-package-json": "^3.4.0",
    "tsx": "4.19.2",
    "typescript": "5.6.3",
    "vitest": "^2.1.1",
    "vite": "^5.4.8",
    "eslint": "^9.37.0",
    "@typescript-eslint/parser": "^8.46.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-unused-imports": "^4.2.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "ws": "8.18.0",
    "zod": "3.23.8"
  },
  "bin": {
    "devminds": "./dist/server.js",
    "dminds-run": "./dist/cli.js"
  },
  "packageManager": "pnpm@9.0.0"
}

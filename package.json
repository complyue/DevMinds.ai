{
  "name": "devminds.ai",
  "private": true,
  "scripts": {
    "build:backend": "pnpm --filter @devminds/backend build",
    "build:web": "pnpm --filter @devminds/webapp build",
    "dev:backend": "pnpm --filter @devminds/backend dev",
    "dev:web": "pnpm --filter @devminds/webapp dev",
    "format": "pnpm run format:manifests || true && pnpm run format:rootdocs || true && pnpm -r --parallel --workspace-concurrency=1 run format || true",
    "format:manifests": "sort-package-json package.json packages/*/package.json",
    "format:rootdocs": "scripts/format-root-docs.sh",
    "lint": "pnpm -r run lint",
    "preview:web": "pnpm --filter @devminds/webapp preview",
    "test": "vitest run",
    "typecheck": "pnpm -r run typecheck",
    "update-models": "node scripts/update-models.js"
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "packages/*/package.json": "sort-package-json",
    "*.md": "prettier --write --ignore-unknown",
    "*.mdx": "prettier --write --ignore-unknown",
    "docs/**/*.{md,mdx}": "prettier --write --ignore-unknown",
    "design/**/*.{md,mdx}": "prettier --write --ignore-unknown",
    "packages/*/src/**/*.json": [
      "sort-json --deep --ignore-case --order asc",
      "prettier --write --ignore-unknown"
    ],
    "packages/*/src/**/*.{ts,tsx,js,jsx,yaml,yml,css,scss,md,mdx,html,htm}": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15.5.2",
    "prettier": "3.6.2",
    "sort-json": "^2.0.1",
    "sort-package-json": "^3.4.0",
    "typescript": "5.6.3",
    "vitest": "^2.1.1"
  },
  "packageManager": "pnpm@9.0.0"
}

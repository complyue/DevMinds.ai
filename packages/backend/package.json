{
  "name": "@devminds/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/server.ts",
    "format": "sh -c 'set -e; for f in src/**/*.json; do [ -f \"$f\" ] && pnpm exec sort-json \"$f\" --deep --ignore-case --order asc || true; done' && pnpm exec prettier -w \"src/**/*.{ts,tsx,js,jsx,json,yaml,yml,css,scss,md,mdx,html,htm}\" || true",
    "lint": "echo \"(add linter later)\"",
    "start": "node dist/server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "1.13.8",
    "hono": "4.7.10",
    "js-yaml": "^4.1.0",
    "ws": "8.18.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.5.2",
    "@types/ws": "^8.18.1",
    "tsx": "4.19.2",
    "typescript": "5.6.3"
  }
}
